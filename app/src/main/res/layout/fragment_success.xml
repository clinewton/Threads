<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SuccessFragment">

    <RelativeLayout
        android:id="@+id/lyt_success"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_success"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/success_icon"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_success"
            android:layout_marginTop="30dp"
            android:text="Your order has been placed.\n Drop by our shop to collect your order"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center"/>

        <Button
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:text="Continue Shopping"
            android:background="@drawable/bg_sanguine"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="25sp"/>
    </RelativeLayout>
</FrameLayout>